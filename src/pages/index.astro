---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import Project from "../components/Project.astro";

type Repository = {
  fork: boolean;
  stargazers_count: number;
};

type PinnedRepo = {
  owner: string;
  repo: string;
  description: string;
  language: string;
  languageColor: string;
  stars: number;
  forks: string;
};

const response = await fetch("https://gh-pinned.nxl.sh/api/user/nexxeln");
const pinnedRepos = (await response.json()) as PinnedRepo[];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} home`} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="m-auto p-5 max-w-[65ch] text-left bg-neutral-900 break-words leading-6 text-neutral-100 antialiased"
  >
    <Header title={SITE_TITLE} />
    <main class="text-lg text-neutral-200">
      <h1 class="text-4xl pb-2">Hi, I'm nexxel</h1>
      <p>
        I'm a 17 y/o self-taught developer and I like to build cool stuff. I'm
        interested in <b>web development</b>,
        <b>serverless</b> tech and I live on the <b>terminal</b>.
      </p>
      <br />
      <p>
        I'm currently in 12th grade, busy studying for final exams. In my free
        time I like to write <a href="/blog">blogs</a> and practice <a
          href="https://en.wikipedia.org/wiki/Cardistry"
          target="_blank">cardistry</a
        >. I also like listening to music and going on cycling trips with
        friends.
      </p>
      <br />
      <br />
      <h2 class="text-3xl pb-4">Things I've Built</h2>

      <section
        class="grid grid-cols-1 gap-4 auto-cols-max sm:grid-cols-2 sm:gap-3"
      >
        {
          pinnedRepos.map((repo) => {
            return (
              <a
                href={`https://github.com/${repo.owner}/${repo.repo}`}
                target="_blank"
                class="hover:no-underline"
              >
                <div class="h-36 flex flex-col justify-between gap-y-2 border border-neutral-700 bg-t-black hover:scale-105 ease-out transition-transform p-4 rounded-xl">
                  <div class="flex flex-col gap-y-2">
                    <span class="text-xl font-medium">{repo.repo}</span>
                    <p class="text-sm text-neutral-200">{repo.description}</p>
                  </div>
                  <div class="flex items-center gap-x-2 text-sm text-neutral-100">
                    <div class="flex gap-x-1 items-center">
                      <span>
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke-width="1.5"
                          stroke="currentColor"
                          class="w-5 h-5"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"
                          />
                        </svg>
                      </span>
                      <span>{repo.stars}</span>
                    </div>

                    <span>â€¢</span>

                    <div class="text-sm">{repo.language}</div>
                  </div>
                </div>
              </a>
            );
          })
        }
      </section>
    </main>
    <Footer />
  </body>
</html>
